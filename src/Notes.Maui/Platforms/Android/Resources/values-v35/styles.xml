<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 15+ (API 35+) specific styles -->
    <style name="Maui.SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">#000000</item>
        
        <!-- Use transparent system bars for edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- Modern edge-to-edge configuration for Android 15+ -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Android 15+ specific: Disable deprecated contrast enforcement -->
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        
        <!-- Android 15+ specific: Use modern display cutout handling -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    
    <!-- Main application theme for Android 15+ -->
    <style name="MainTheme" parent="Maui.SplashTheme">
        <!-- Android 15+ specific customizations -->
    </style>
</resources>